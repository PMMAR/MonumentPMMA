<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Monument"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Monument.MainPage"
    mc:Ignorable="d">

    <Grid Background="#FF333333">
        <Rectangle HorizontalAlignment="Left" Height="229" Margin="67,71,0,0" VerticalAlignment="Top" Width="224" Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Logo/MonumentLogoLarge.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="button" Content="" HorizontalAlignment="Left" Margin="0,586,0,0" VerticalAlignment="Top" Click="button_Click" Foreground="#FF0F5A30" Width="90" Height="54" BorderBrush="#FF212121" BorderThickness="0,2,2,0">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/Icons/HomeIconMedium.png">
                    <ImageBrush.RelativeTransform>
                        <CompositeTransform CenterY="0.5" CenterX="0.5" ScaleX="1.2" ScaleY="1.2"/>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Button.Background>
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </Button>
        <Button x:Name="button_Copy" Content="Login" HorizontalAlignment="Left" Margin="90,586,0,0" VerticalAlignment="Top" Click="button_Click" Foreground="{x:Null}" Width="90" Height="54" BorderThickness="0,2,2,0" BorderBrush="#FF212121">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/Icons/SearchIconMedium.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy1" Content="Login" HorizontalAlignment="Left" Margin="180,586,0,0" VerticalAlignment="Top" Click="button_Click" Width="89" Height="54" BorderBrush="#FF212121" BorderThickness="0,2,2,0">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Foreground>
                <ImageBrush Stretch="Fill" ImageSource="Assets/Logo/MonumentLogoSmall.png"/>
            </Button.Foreground>
        </Button>
        <Button x:Name="button_Copy2" Content="" HorizontalAlignment="Left" Margin="269,586,0,0" VerticalAlignment="Top" Click="button_Click" Width="91" Height="54" BorderBrush="#FF212121" BorderThickness="0,2,0,0" FontSize="11" FontWeight="Bold" Foreground="{x:Null}">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/Icons/SettingsIconMedium.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="67,349,0,0" VerticalAlignment="Top" Height="43" Width="87" Foreground="{x:Null}">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Icons/ArrowIconLeftFile.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1_Copy" Content="Button" HorizontalAlignment="Left" Margin="204,349,0,0" VerticalAlignment="Top" Height="43" Width="87" Foreground="{x:Null}">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Icons/ArrowIconRightFile.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button1_Copy1" Content="Button" HorizontalAlignment="Left" Margin="154,306,0,0" VerticalAlignment="Top" Height="43" Width="50" Foreground="{x:Null}">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:CallMethodAction/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Icons/InformationIcon.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
